
<div class="full-container">
	<!-- itenerary section -->
	<div class="progressbar">
		
		<div class="logo">
			<%= link_to  new_container_path, class: "navbar-wagon-brand" do %>
      			<%= image_tag "balloons@3x.png", height: 50, class: "ballon-logo" %>
    		<% end %>
    		<h2>Step 1 : Start with the basics </h2>
		</div>	
	</div>
	<div class="progress">
  		<div class="progress-bar background-tuorquoise" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">
  			
  		</div>
	</div>
	<div class="container">
		<div class="row">
			<%= simple_form_for @groupage, url:groupages_path, method: :get do |f| %>
			<%= f.error_notification %>
			 <!-- <div class="checkbox-errors">
              <%#if params[:commit] && params[:departure_date].blank? %>
                <ul>
                  <li>
                      <span class="checkbox-error-msg"><%#= "every fild must be filled" %></span>
                  </li>
                </ul>
              <%# end %>
                     
                    
            </div> -->
			<%#= simple_form_for  :groupage, :url => {:controller => 'groupages', :action => 'index'} do |f| %>
			<%#  f.input :container_id, :as => :hidden, :input_html => { :value => @container.id } %>
				<div class="col-xs-12 col-sm-6">
					<div class="itinerary-section form">
						<div class="row">
							<div class="col-xs-12 col-sm-12">
								<h3>What is your moveâ€™s itinerary?</h3>
								<%= f.input :origin, label: false, placeholder: "Moving from (enter City)", input_html: { id: "origin-address" }%>
							</div>
						</div>
						<div class="row">
							<div class="col-xs-12 col-sm-12">
								<%= f.input :destination, label: false, placeholder: "Moving to (enter City)", input_html: { id: "destination-address" } %>
							</div>
						</div>	
						<div class="when-you-move">
							<div class="row">
								<div class="col-xs-12 col-sm-12">
									<h3>When are you moving?</h3>
									    <%= f.input :departure_date, as: :string, required: false, label: false, input_html: {class: "datepicker"}, placeholder: "My move date is" %>
									<p>Note : select an approximate date if you are unsure</p>

								</div>
							</div>
						</div>
						<hr class="hidden-xs">
						
						<div class="row hidden-xs">
							<div class="btn-section">
								<div class="back-link">
									<%#= link_to 'Back to this p', url_for(:back) %>
									<%= link_to containers_form_opening_path, class: "btn-back-link" do %>
											<i class="fas fa-chevron-left"></i>
										<% end %>
									<%= link_to "Back", containers_form_opening_path, class: "btn-back-link" %>
									
									
								</div>
								<div class="next-button">
									<%= f.submit "Next", class: "btn btn-next"  %>
								</div>
							</div>
						</div>
					</div>
					
						
				</div>
				<div class="col-xs-12 col-sm-6">
					<div class="flexbox">
						<div class="information-box">
							<%= image_tag "bulb.svg", height: 30, class: "lamp-icon" %>
							<p>ALL our shared containers are handled by professional moving companies.</p>
						</div>
					</div>
				</div>
				<div class="hidden-sm hidden-md hidden-lg">
					<!-- <div class="col-xs-12"> -->
						<div class="action-buttons-section">
							<div class="back-link">
								<%#= link_to 'Back to this p', url_for(:back) %>
								<%= link_to containers_form_opening_path, class: "btn-back-link" do %>
										<i class="fas fa-chevron-left"></i>
									<% end %>
								<%= link_to "Back", containers_form_opening_path, class: "btn-back-link" %>
								
								
							</div>
							<div class="next-button">
								<%= f.submit "Next", class: "btn btn-next"  %>
							</div>
						</div>
					<!-- </div> -->
					
				</div>
			<% end %>
		</div>	
		

	</div>

</div>


