<div class="full-container">
	<div class="progressbar">
		
		<div class="logo">
			<%= link_to  new_container_path, class: "navbar-wagon-brand" do %>
      			<%= image_tag "balloons@3x.png", height: 50, class: "ballon-logo" %>
    		<% end %>
    		<h2>List your container</h2>
		</div>	
	</div>
	<div class="progress">
  		<div class="progress-bar background-tuorquoise w-85" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">
  			
  		</div>
	</div>
	<div class="container">
		<div class="row">
			<%#= simple_form_for [@container, @groupage], url: wizard_path, :method => :put do |f| %>
				<div class="col-sm-6">
					<div class="itinerary-section form">
						<div class="row">
							<div class="col-sm-12">
								<h3>Where should we notify you when your container is live?</h3>
								<%= f.input :notification_email, label: "My main email address is", placeholder: "Email" %>
								<h4>Your email will never be shared with anyone.</h4>
							</div>
						</div>
						<div class="row">
							<!-- <div class="col-sm-2">
								<%#= f.input :phone_prefix, label: false, collection: Groupage::PHONE_PREFIX, input_html: { class: 'input-margin-top' } , prompt: params[:phone] %>
							</div> -->
							<div class="col-sm-12">
								<%= f.input :notification_email, label: "Phone number (optional)", placeholder: "My phone number (incl. country code)" %>
								<p> <span class="">In case we need further details on your move.</span></p>
							</div>
						</div>
					</div>
					<hr>
					<div class="row">
						<div class="btn-section">
							<div class="back-link">
								<%#= link_to 'Back', url_for(:back) %>
								<%= link_to url_for(:back) , class: "btn-back-link" do %>
										<i class="fas fa-chevron-left"></i>
									<% end %>
								<%= link_to "Back", url_for(:back), class: "btn-back-link" %>
								
							</div>
							<div class="next-button">
								<%= f.submit "Next", class: "btn btn-next"  %>
							</div>
						</div>
					</div>
				</div>
				<div class="col-sm-6">
					<div class="flexbox">
						<div class="information-box">
							<%= image_tag "bulb.svg", height: 30, class: "lamp-icon" %>
								<p>Listing your container, we think you could earn up to <b class="save-amount"><%= number_with_precision(@result, :precision => 0, ) %></b> USD 
								 <button type="button" class="btn btn-information" data-toggle="modal" data-target="#estimate">
									  <i class="fas fa-info-circle"></i>
								</button>
								</p> 
							
						</div>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>