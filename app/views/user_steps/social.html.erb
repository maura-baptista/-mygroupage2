<div class="full-container">
	<div class="container">
		<div class="row">
			<%= simple_form_for [@container, @groupage], url: wizard_path, :method => :put do |f| %>
				<div class="col-sm-6">
					<div class="itinerary-section form">
						<div class="row">
							<div class="col-sm-12">
								<h3>Where should we notify you when your container is live?</h3>
								<%= f.input :notification_email, label: "My main email address is", placeholder: "Email" %>
								<h4>Your email will never be shared with anyone.</h4>
							</div>
						</div>
						<div class="row">
							<div class="col-sm-2">
								<%= f.input :phone_prefix, label: false, collection: Groupage::PHONE_PREFIX, input_html: { class: 'input-margin-top' } , prompt: params[:phone] %>
							</div>
							<div class="col-sm-10">
								<%= f.input :notification_email, label: "Phone number (optional)", placeholder: "My phone number" %>
								<p> <span class="parapgraph-margin-left">In case we need further details on your move.</span></p>
							</div>
						</div>
					</div>
					<hr>
					<div class="row">
						<div class="btn-section">
							<div class="back-link">
								<%#= link_to 'Back', url_for(:back) %>
								<%= link_to url_for(:back) , class: "btn-back-link" do %>
										<i class="fas fa-chevron-left"></i>
									<% end %>
								<%= link_to "Back", url_for(:back), class: "btn-back-link" %>
								
							</div>
							<div class="next-button">
								<%= f.submit "Next", class: "btn btn-next"  %>
							</div>
						</div>
					</div>
				</div>
				<div class="col-sm-6">
					<div class="flexbox">
						<div class="information-box">
							<%= image_tag "bulb.svg", height: 30, class: "lamp-icon" %>
								<p>Listing your container, we think you could earn up to <b>2,200</b> USD 
								 <button type="button" class="btn btn-information" data-toggle="modal" data-target="#estimate">
									  <i class="fas fa-info-circle"></i>
								</button>
								</p> 
							
						</div>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>