<div class="full-container">

	<div class="container">
		<div class="row">

			<%= simple_form_for [@container, @groupage], url: wizard_path, :method => :put do |f| %>
					<div class="col-sm-6">
						<div class="itinerary-section form">
							<div class="row">
								<div class="col-sm-12">
									<h3>Which moving company have you selected to handle your move?</h3>
									<%= f.input :mover, label: false, placeholder: "Enter name of the moving company" %>
									<p>Note : We need to verify that we already have a partnership with your moving company. In case we donâ€™t, we will reach out to add your mover to our list of approved partners.</p>
								</div>
							</div>
						</div>
						<hr>
						<div class="row">
							<div class="next-button">
								<%= f.submit "Next", class: "btn btn-next"  %>
							</div>
						</div>
					</div>

					<div class="col-sm-6">
						<div class="flexbox">
							<div class="information-box">
								<%= image_tag "bulb.svg", height: 30, class: "lamp-icon" %>
									<p>Listing your container, we think you could earn up to <b>2,200</b> USD 
									 <button type="button" class="btn btn-information" data-toggle="modal" data-target="#estimate">
										  <i class="fas fa-info-circle"></i>
									</button>
								</p> 
								
							</div>
						</div>
					</div>
			<% end %>
			 <%= render 'containers/modal_information' %>
		</div>
	</div>
</div>
