<div class="full-container">
	<div class="progressbar">
		
		<div class="logo">
			<%= link_to  new_container_path, class: "navbar-wagon-brand" do %>
      			<%= image_tag "balloons@3x.png", height: 50, class: "ballon-logo" %>
    		<% end %>
    		<h2>Step 1 : Start with the basics</h2>
		</div>	
	</div>
	<div class="progress">
  		<div class="progress-bar background-tuorquoise w-85" role="progressbar" style="width: 85%" aria-valuenow="85" aria-valuemin="0" aria-valuemax="100">
  			
  		</div>
	</div>
	<div class="container">
		<div class="row">

			<%= simple_form_for [@container, @groupage], url: wizard_path, :method => :put do |f| %>
					<div class="col-sm-6">
						<div class="itinerary-section form">
							<div class="row">
								<div class="col-sm-12">
									<h3>Which moving company have you selected to handle your move?</h3>
									<%= f.input :mover, label: false, placeholder: "Enter name of the moving company" %>
									<p>Note : We need to verify that we already have a partnership with your moving company. In case we donâ€™t, we will reach out to add your mover to our list of approved partners.</p>
								</div>
							</div>
						</div>
						<hr>
						<div class="row">
						<div class="btn-section">
							<div class="back-link">
								<%#= link_to 'Back', url_for(:back) %>
								<%= link_to url_for(:back) , class: "btn-back-link" do %>
										<i class="fas fa-chevron-left"></i>
									<% end %>
								<%= link_to "Back", url_for(:back), class: "btn-back-link" %>
								
							</div>
							<div class="next-button">
								<%= f.submit "Next", class: "btn btn-next"  %>
							</div>
						</div>
					</div>
					</div>

					<div class="col-sm-6">
						<div class="flexbox">
							<div class="information-box">
								<%= image_tag "bulb.svg", height: 30, class: "lamp-icon" %>
									<p>Listing your container, we think you could earn up to <b class="save-amount">
										<%= number_with_precision(@result, :precision => 0, ) %></b> <%= @currency %> 
									 <button type="button" class="btn btn-information" data-toggle="modal" data-target="#estimate">
										  <i class="fas fa-info-circle"></i>
									</button>
								</p> 
								
							</div>
						</div>
					</div>
			<% end %>
			 <%= render 'containers/modal_information' %>
		</div>
	</div>
</div>
